<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
		android:id="@+id/child_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:layout_marginRight="5dip"
		android:layout_alignParentLeft="true"
		/>
        
        <TextView
		android:id="@+id/child_language"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:layout_marginRight="5dip"
		android:layout_marginLeft="5dip"
		android:layout_alignParentRight="true"
		/>

                <ImageView
		android:id="@+id/child_flag"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dip"
		android:layout_toRightOf="@id/child_id"
				android:contentDescription="@string/desc_language_child_flag"
	
		/>
	<TextView
		android:id="@+id/child_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/child_flag"
		android:layout_toLeftOf="@id/child_language"
		/>
	
	        
       
</RelativeLayout>
